---
// Główne menu nawigacyjne
const baseUrl = import.meta.env.BASE_URL;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="shrink-0">
        <a href={baseUrl} class="flex items-center">
          <img
            src={`${baseUrl}images/medykalni-logo.png`}
            alt="Medykalni"
            class="h-12 w-auto"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href={`${baseUrl}szkolenia`} class="text-gray-700 hover:text-primary transition-colors font-medium">
          Szkolenia
        </a>

        <!-- Dropdown Projekty -->
        <div class="relative group">
          <button
            class="text-gray-700 hover:text-primary transition-colors font-medium flex items-center gap-1"
            aria-haspopup="true"
            aria-expanded="false"
          >
            Projekty
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute left-0 mt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="bg-white rounded-lg shadow-lg border border-gray-100 py-2">
              <a
                href={`${baseUrl}projekty/polozna-na-swoim`}
                class="block px-4 py-3 text-gray-700 hover:bg-background-lighter hover:text-primary transition-colors"
              >
                Położna na swoim
              </a>
              <a
                href={`${baseUrl}projekty/mastermind`}
                class="block px-4 py-3 text-gray-700 hover:bg-background-lighter hover:text-primary transition-colors"
              >
                Grupy mastermind
              </a>
              <a
                href={`${baseUrl}projekty/rekrutacja`}
                class="block px-4 py-3 text-gray-700 hover:bg-background-lighter hover:text-primary transition-colors"
              >
                Rekrutacja
              </a>
            </div>
          </div>
        </div>

        <a href={`${baseUrl}dla-placowek/rekrutacja`} class="text-gray-700 hover:text-primary transition-colors font-medium">
          Dla placówek
        </a>
        <a href={`${baseUrl}o-nas`} class="text-gray-700 hover:text-primary transition-colors font-medium">
          O nas
        </a>
        <a href={`${baseUrl}kontakt`} class="text-gray-700 hover:text-primary transition-colors font-medium">
          Kontakt
        </a>
        <a
          href={`${baseUrl}szkolenia/prowadzenie-ciazy-przez-polozna#zapisy`}
          class="bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-dark transition-colors font-semibold"
        >
          Zapisz się
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="text-gray-700 hover:text-primary focus:outline-none"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a href={`${baseUrl}szkolenia`} class="text-gray-700 hover:text-primary transition-colors font-medium py-2">
          Szkolenia
        </a>

        <!-- Mobile Projekty Submenu -->
        <div>
          <button
            id="mobile-projekty-toggle"
            class="w-full text-left text-gray-700 hover:text-primary transition-colors font-medium py-2 flex items-center justify-between"
          >
            Projekty
            <svg id="mobile-projekty-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="mobile-projekty-menu" class="hidden pl-4 space-y-2 mt-2">
            <a href={`${baseUrl}projekty/polozna-na-swoim`} class="block text-gray-600 hover:text-primary transition-colors py-2">
              Położna na swoim
            </a>
            <a href={`${baseUrl}projekty/mastermind`} class="block text-gray-600 hover:text-primary transition-colors py-2">
              Grupy mastermind
            </a>
            <a href={`${baseUrl}projekty/rekrutacja`} class="block text-gray-600 hover:text-primary transition-colors py-2">
              Rekrutacja
            </a>
          </div>
        </div>

        <a href={`${baseUrl}dla-placowek/rekrutacja`} class="text-gray-700 hover:text-primary transition-colors font-medium py-2">
          Dla placówek
        </a>
        <a href={`${baseUrl}o-nas`} class="text-gray-700 hover:text-primary transition-colors font-medium py-2">
          O nas
        </a>
        <a href={`${baseUrl}kontakt`} class="text-gray-700 hover:text-primary transition-colors font-medium py-2">
          Kontakt
        </a>
        <a
          href={`${baseUrl}szkolenia/prowadzenie-ciazy-przez-polozna#zapisy`}
          class="bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-dark transition-colors font-semibold text-center"
        >
          Zapisz się
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Mobile projekty submenu toggle
  const mobileProjektyToggle = document.getElementById('mobile-projekty-toggle');
  const mobileProjektyMenu = document.getElementById('mobile-projekty-menu');
  const mobileProjektyIcon = document.getElementById('mobile-projekty-icon');

  mobileProjektyToggle?.addEventListener('click', () => {
    mobileProjektyMenu?.classList.toggle('hidden');
    mobileProjektyIcon?.classList.toggle('rotate-180');
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      mobileProjektyMenu?.classList.add('hidden');
      mobileProjektyIcon?.classList.remove('rotate-180');
    });
  });
</script>
